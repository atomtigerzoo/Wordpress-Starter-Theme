{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jquery": true
	},
	"extends": "airbnb",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"comma-dangle": 0,
		"indent": [
			"error", 
			2
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"max-len": 1,
		"no-console": 0,
		"no-unused-vars": 1,
		"no-mixed-spaces-and-tabs": 1,
		"no-tabs": 0,
		"no-trailing-spaces": [2, { "skipBlankLines": true }],
		"object-shorthand": 0,
		"semi": [
			"error",
			"always"
		],
		"spaced-comment": 1
	}
}
